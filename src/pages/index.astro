---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import GithubIcon from "../components/icons/Github.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Portfolio de Danilo Maccari" description="Desarrollador Full Stack" lang="es">
  <main class="px-4">
    <SectionContainer class="py-28 pb-32">
      <h1 class="text-black dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        ¡Hola, soy Danilo Maccari!
        <a href="https://www.linkedin.com/in/maccari78/" target="_blank" rel="noopener" class="flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>Full Stack Developer</span> 
        con experiencia en Javascript, TypeScript, NextJS, NestJS, Ruby on Rails y PostgreSQL.
        Apasionado por el desarrollo backend y la seguridad de cuentas, incluyendo JWT, OAuth2, Next-Auth, RBAC y Devise.
        He trabajado en la creación de plataformas completas de eCommerce y aplicaciones web. Tengp experiencia en proyectos reales y busco
        contribuir a iniciativas innovadores donde pueda aplicar mis conocimientos, aprender y seguir creciendo profesionalmente. 
        De Bahía Blanca, Buenos Aires, Argentina
      </h2>
      <ul>
        <nav class="flex gap-4 mt-8 flex-wrap">
          <SocialPill href="https://www.linkedin.com/in/maccari78/">
            <LinkedInIcon class="size-4 md:size-6" />LinkedIn
          </SocialPill>
          <SocialPill href="https://github.com/maccari78">
            <GithubIcon class="size-4 md:size-6" />Github
          </SocialPill>
          <SocialPill href="mailto:maccari78@gmail.com">
            <MailIcon class="size-4 md:size-6" />maccari78@gmail.com
          </SocialPill>
        </nav>
      </ul>
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-2 items-center">
        <Briefcase class="size-7" />
        Experiencia profesional
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>

<script is:inline type="text/javascript">
  function googleTranslateElementInit() {
    new google.translate.TranslateElement(
      { pageLanguage: "es" },
      "google_translate_element"
    );
  }
</script>
<script is:inline type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
